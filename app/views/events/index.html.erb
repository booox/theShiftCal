<div class="col-md-12">
  <div class="container">
    <div class="search">
      <%= form_tag(events_path, method: :get) do %>
      <%= text_field_tag :slack, params[:slack], required: true, class:"form-control input-lg",placeholder:"Enter the slack id", size:80 %>
      <br>
      <%= select_tag :format, options_for_select([["I want to export all my shifts of this week into my calendar", "ics"],["Just check my shifts on page", "html"]], "Export all your events of this week"), class:"form-control " %>
      <br>
      <%= submit_tag "Search and export my shifts", class:"form-control btn btn-info" %>
      <% end %>
    </div>
    <br>
    <% if current_user %>
      <div class="col-md-3">
        <%= render 'import' %>
      </div>
      <div class="col-md-9">
        <%= link_to "Export  all the events", {controller:'events', action: :ics_export, format: :ics}, class: 'btn btn-primary' %>
        <%= link_to "Import it into the Google Calendar and post the events to slack", "https://calendar.google.com", class:'btn btn-success' %>
        <%= link_to("Set up a new weekly shift", new_week_table_path, class:"btn btn-danger") %>
      </div>
    <% end %>
  </div>
  <table class="table table-bordered table-responsive table-hover">
    <thead>
      <hr>
      <tr>
        <td>Shift</td>
        <td>TAs</td>
        <td>Calendar Download Links</td>
        <% if current_user %>
        <td>delete</td>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if @events.present? %>
      <%= render "event" %>
      <% else %>
      <p>Please enter your slack id</p>
      <% end %>
    </tbody>
  </table>
</div>
